{
  "title": "SLO Overview",
  "uid": "slo-overview",
  "panels": [
    {
      "title": "Availability SLI (5m rolling)",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [{"expr": "sli:availability:ratio_rate5m", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit", "min": 0.9, "max": 1,
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "orange", "value": 0.99},
              {"color": "green", "value": 0.995}
            ]
          }
        }
      }
    },
    {
      "title": "Latency SLI â€” % under 200ms (5m)",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [{"expr": "sli:latency_under_200ms:ratio_rate5m", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit", "min": 0.5, "max": 1,
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "orange", "value": 0.9},
              {"color": "green", "value": 0.95}
            ]
          }
        }
      }
    },
    {
      "title": "Error Budget Remaining",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [{"expr": "slo:availability:error_budget_remaining", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit", "min": 0, "max": 1,
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "orange", "value": 0.25},
              {"color": "green", "value": 0.5}
            ]
          }
        }
      }
    },
    {
      "title": "Request Rate by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [{"expr": "sum by(endpoint)(rate(http_requests_total[1m]))", "legendFormat": "{{endpoint}}", "refId": "A"}]
    },
    {
      "title": "Error Rate by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [{"expr": "sum by(endpoint)(rate(http_requests_total{status='500'}[1m]))", "legendFormat": "{{endpoint}}", "refId": "A"}]
    },
    {
      "title": "Latency p50 / p95 / p99",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "targets": [
        {"expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p50", "refId": "A"},
        {"expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95", "refId": "B"},
        {"expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p99", "refId": "C"}
      ]
    }
  ],
  "time": {"from": "now-30m", "to": "now"},
  "refresh": "10s"
}